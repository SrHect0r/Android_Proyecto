<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp"
    android:padding="16dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre de la tarea -->
        <TextView
            android:id="@+id/tvNombreTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Tarea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <!-- Estado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#03A9F4"/>

        <!-- Prioridad -->
        <TextView
            android:id="@+id/tvPrioridadTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad: Alta"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp"/>

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechasTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creación: 2025-11-27 | Inicio: 2025-11-27 | Fin: 2025-12-05"
            android:textSize="12sp"
            android:textColor="#03A9F4"
            android:layout_marginTop="4dp"/>

        <!-- Usuarios asignados -->
        <TextView
            android:id="@+id/tvUsuariosTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios: david, aleix"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"/>

        <!-- Horas dedicadas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horas dedicadas"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etHoras"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/et_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="4dp"/>

        <!-- Comentario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etComentario"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Escribe un comentario"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginTop="4dp"/>

        <!-- Completada -->
        <CheckBox
            android:id="@+id/cbCompletada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completada"
            android:layout_marginTop="8dp"/>

        <!-- Botón Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarTarea"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Guardar cambios"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp"
            android:backgroundTint="#03A9F4"
            app:cornerRadius="26dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
