<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la tarea -->
        <TextView
            android:id="@+id/txtNombreTareaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la tarea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Descripción de la tarea -->
        <TextView
            android:id="@+id/txtDescripcionTareaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve de la tarea..."
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Estado y fecha límite -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEstadoTareaDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Pendiente"
                android:textColor="#03A9F4"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtFechaLimiteTareaDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha límite: 12/12/2025"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Prioridad -->
        <TextView
            android:id="@+id/txtPrioridadTareaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad: Alta"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
